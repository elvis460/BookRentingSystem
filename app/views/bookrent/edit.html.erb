<div class="container">
	<div class="row">
		<div class="panel panel-white" id="panel1">
			<div class="panel-heading"></div>
			<div class="panel-body">
				<div class="pro-img-box text-center">
					<img src="<%= @bookrent.book.image%>" alt="" style="width: 400px">
				</div>
				<table class="table table-hover" id="sample-table-1" style="margin-top: 30px">
					<thead></thead>
					<tbody >
						<tr class="col-md-10">
							<td><h4 class="text-center">書名：</h4></td>
							<td><h4 class="text-center"><%= @bookrent.book.name%></h4></td>
						</tr>
						<tr class="col-md-10">
							<td><h4 class="text-center">索書號：</h4></td>
							<td><h4 class="text-center"><%= @bookrent.book.BN%></h4></td>
						</tr>
						<tr class="col-md-10">
							<td><h4 class="text-center">書本狀態：</h4></td>
							<td><h4 class="text-center">租借中</td>
						</tr>
						<tr class="col-md-10">
							<td><h4 class="text-center">到期日：</h4></td>
							<td><h4 class="text-center"><%= @bookrent.dead_line%></h4></td>
						</tr>
						<tr class="col-md-10">
							<td><h4 class="text-center">是否逾時：</h4></td>
							<td><h4 class="text-center">否</h4></td>
						</tr>
					</tbody>
				</table>

			</div>
			<div class="panel-footer">
				<a href="/bookrent/update/<%= @bookrent.id%>"class="btn btn-info">確認歸還</a>
			</div>
		</div>
	</div>
</div>
