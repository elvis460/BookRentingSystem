<div class="container">
	<div class="row">
		<div class="col-md-8 col-md-offset-2" style="margin-top: 30px">
			<div class="panel panel-info ">
				<div class="panel-heading">
					<h3 class="panel-title">書籍出租</h3>
				</div>
				<div class="panel-body col-md-offset-2">
					<div class="pro-img-box col-md-offset-3" style="margin-top: 15px">
						<img src="<%= @book.image%>" alt="" style="width: 200px">
					</div>
					<form role="form" class="form-horizontal" action="/bookrent/create" method="post" style="margin-top: 15px">
						<%= token_tag nil%>
						<div class="form-group">
							<label class="col-sm-2 control-label" for="inputEmail3"> 書名 </label>
							<div class="col-sm-6">
								<input type="text"  id="inputEmail3" class="form-control" value="<%= @book.name%>" readonly>
								<input type="hidden"  id="inputEmail3" class="form-control" name="book_id" value="<%= @book.id%>">

							</div>
						</div>
						<div class="form-group">
							<label class="col-sm-2 control-label" for="inputPassword3"> 租借人 </label>
							<div class="col-sm-6">
								<input type="text" placeholder="請輸入租借人名稱" id="password" class="form-control" name="user_name" required="">
							</div>
						</div>
						<div class="form-group">
							<div class="col-lg-offset-1 col-lg-10">
								<button type="submit" class="btn btn-danger">
									確定
								</button>
							</div>
						</div>
					</form>
				</div>
			</div>
		</div>
	</div>
</div>
