<div class="container">
	<div class="row">
		<div class="panel panel-white" id="panel1" style="margin-top: 30px">
			<table class="table  table-hover" id="sample-table-2">
				<thead>
					<tr>
						<th class="col-md-1"></th>
						<th class="col-md-2">書名</th>
						<th class="hidden-xs col-md-2">索書號</th>
						<th class="hidden-xs col-md-2">借書人</th>
						<th class="hidden-xs col-md-2">到期日</th>
						<th class="hidden-xs col-md-1">應繳罰金</th>
						<th class="hidden-xs col-md-1">歸還</th>
						<th></th>
					</tr>
				</thead>
				<tbody>
					<%@bookrent.each do |b|%>
					<tr>
						<td></td>
						<td><%= b.book.name%></td>
						<td><%= b.book.BN%></td>
						<td><%= b.user.name%></td>
						<td ><%= b.dead_line%></td>
						<td ><%if (Time.now - 7.days) > b.dead_line %> $10 <%else%> 否 <%end%></td>
						<td><%if b.borrowed == true %> <a href="/bookrent/update/<%= b.id%>"class="btn btn-info"> 還書</a> <%else%> <span class="label label-sm label-success">已歸還</span><%end%></td>
						<td class="center">
						<div class="visible-md visible-lg hidden-sm hidden-xs">
							<a href="/bookrent/destroy/<%= b.id%>" class="btn btn-transparent btn-xs tooltips" tooltip-placement="top" tooltip="Remove"><i class=" glyphicon glyphicon-remove"></i></a>
						</div></td>
					</tr>
					<%end%>

				</tbody>
			</table>
		</div>
	</div>
</div>
