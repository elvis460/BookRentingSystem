<div class="container">
	<div class="row">
		<div class="col-md-8 col-md-offset-2" style="margin-top: 30px">
			<div class="panel panel-info ">
				<div class="panel-heading">
					<h3 class="panel-title">新增書籍</h3>
				</div>
				<div class="panel-body col-md-offset-2">
					<form role="form" class="form-horizontal" action="/book/create" method="post" style="margin-top: 15px">
						<%= token_tag nil%>
						<div class="form-group">
							<label class="col-sm-2 control-label" for="inputEmail3"> Name </label>
							<div class="col-sm-6">
								<input type="text"  id="inputEmail3" class="form-control" name="book[name]" required="" placeholder="Enter Book Name">
							</div>
						</div>
						<div class="form-group">
							<label class="col-sm-2 control-label" for="inputPassword3"> Category </label>
							<div class="col-sm-6">
								<select class="category_select" name="book[category]" required="">
									<option ></option>
									<option value="Comicbook" data-bn="A" >漫畫</option>
									<option value="Novel" data-bn="B" >小說</option>
									<option value="Magazine" data-bn="C" >雜誌</option>
								</select>
							</div>
						</div>
						<div class="form-group">
							<label class="col-sm-2 control-label" for="inputPassword3"> BN: </label>
							<div class="col-sm-6">
								<input type="text"  id="BN" class="form-control" name="book[BN]" required="" value="" readonly="">
							</div>
						</div>
						<div class="form-group">
							<div class="col-lg-offset-2 col-lg-10">
								<button type="submit" class="btn btn-danger">
									Create
								</button>
							</div>
						</div>
					</form>
				</div>
			</div>
		</div>
	</div>
</div>

<script>
	$(document).ready(function() {
$('.category_select').change(function() {
	if ($(this).val() == "Comicbook")
		$('#BN').val($('.category_select :selected').data('bn')+<%= @comicbook_bn%>);
	else if  ($(this).val() == "Novel")
		$('#BN').val($('.category_select :selected').data('bn')+<%= @novel_bn%>);
	else if  ($(this).val() == "Magazine")
		$('#BN').val($('.category_select :selected').data('bn')+<%= @magazine_bn%>);
	});
	});
</script>
