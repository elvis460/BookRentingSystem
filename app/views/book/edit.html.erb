<div class="container">
	<div class="row">
		<div class="col-md-8 col-md-offset-2" style="margin-top: 30px">
			<div class="panel panel-info ">
				<div class="panel-heading">
					<h3 class="panel-title">修改書籍</h3>
				</div>
				<div class="panel-body col-md-offset-2">
					<form role="form" class="form-horizontal" action="/book/update/<%= @book.id%>" method="post" style="margin-top: 15px">
						<%= token_tag nil%>
						<div class="form-group">
							<label class="col-sm-2 control-label" for="inputEmail3"> Name </label>
							<div class="col-sm-6">
								<input type="text"  id="inputEmail3" class="form-control" name="book[name]" required="" value="<%= @book.name%>">
							</div>
						</div>
						<div class="form-group">
							<label class="col-sm-2 control-label" for="inputPassword3"> Category </label>
							<div class="col-sm-6">
								<select class="category_select" name="book[category]" >
									<option value="Comicbook" <%if @book.category == "Comicbook"%> selected="" <%end%> data-bn="A" >漫畫</option>
									<option value="Novel" <%if @book.category == "Novel"%> selected="" <%end%> data-bn="B" >小說</option>
									<option value="Magazine" <%if @book.category == "Magazine"%> selected="" <%end%> data-bn="C" >雜誌</option>
								</select>
							</div>
						</div>
						<div class="form-group">
							<label class="col-sm-2 control-label" for="inputPassword3"> BN: </label>
							<div class="col-sm-6">
								<input type="text"  id="BN" class="form-control" name="book[BN]" required="" value="<%= @book.BN %>" readonly="">
							</div>
						</div>
						<div class="form-group">
							<div class="col-lg-offset-2 col-lg-10">
								<button type="submit" class="btn btn-danger">
									Update
								</button>
							</div>
						</div>
					</form>
					<div class="row" style="margin-top: 100px">
						<h3>圖片上傳</h3>
						<div class="col-md-12">
							<form class="form-horizontal"  action="/book/upload_image/<%= @book.id%>"  enctype="multipart/form-data" method="post" >
								<%= token_tag nil%>
								<div class="bs-example bookimages" data-example-id="basic-forms">
									<div class="form-group col-md-6">
										<input type="file"  name="image"  multiple="" />
									</div>
									<div class="form-group col-md-5">
										<button type="submit" class="btn showbk btn-default ">
											Upload
										</button>
									</div>
									<img src="<%= @book.image%>" style="width: 200px">
									<input type="checkbox" name="remove_image" value="1">
									Remove
								</div>
							</form>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>

<script>
	$(document).ready(function() {
$('.category_select').change(function() {
if ($(this).val() == "Comicbook")
$('#BN').val($('.category_select :selected').data('bn')+<%= @comicbook_bn%>);
else if  ($(this).val() == "Novel")
$('#BN').val($('.category_select :selected').data('bn')+<%= @novel_bn%>);
else if  ($(this).val() == "Magazine")
$('#BN').val($('.category_select :selected').data('bn')+<%= @magazine_bn%>
	);
	});
	});
</script>