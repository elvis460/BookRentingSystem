<div class="container">
	<div class="row">
		<div class="col-md-8 col-md-offset-2" style="margin-top: 30px">
			<div class="panel panel-info ">
				<div class="panel-heading">
					<h3 class="panel-title">修改會員資料</h3>
				</div>
				<div class="panel-body col-md-offset-2">
					<form role="form" class="form-horizontal" action="/user/update" method="post" style="margin-top: 15px">
						<%= token_tag nil%>
						<div class="form-group">
							<label class="col-sm-2 control-label" for="inputEmail3"> 姓名 </label>
							<div class="col-sm-6">
								<input type="text"  id="inputEmail3" class="form-control" name="user[name]" required="" value="<%= @user.name%>">
							</div>
						</div>
						<div class="form-group">
							<label class="col-sm-2 control-label" for="inputPassword3"> 密碼 </label>
							<div class="col-sm-6">
								<input type="password"  id="password" class="form-control" name="user[password]" required="" value="<%= @user.password%>">
							</div>
						</div>
						<div class="form-group">
							<label class="col-sm-2 control-label" for="inputPassword3"> 密碼確認 </label>
							<div class="col-sm-6">
								<input type="password"  id="passwordconfirm" class="form-control" name="user[password_confirmation]" required="" value="<%= @user.password_confirmation%>">
							</div>
						</div>
						<div class="form-group">
							<div class="col-lg-offset-2 col-lg-10">
								<button type="submit" class="btn btn-danger">
									建立帳號
								</button>
							</div>
						</div>
					</form>
				</div>
			</div>
		</div>
	</div>
</div>
<script>
	$(document).ready(function(){
		$('.btn').on('click',function(){
			if ($('#password').val()!=$('#passwordconfirm').val())
				alert('Password not the same!!!');
				reutrn
		});
	});
</script>
